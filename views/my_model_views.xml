<odoo>
  <!-- TREE VIEW -->
  <record id="view_my_model_tree" model="ir.ui.view">
    <field name="name">my.module.tree</field>
    <field name="model">my.module</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="priority"/>
        <field name="assigned_to"/>
        <field name="due_date"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- FORM VIEW -->
  <record id="view_my_model_form" model="ir.ui.view">
    <field name="name">my.module.form</field>
    <field name="model">my.module</field>
    <field name="arch" type="xml">
      <form string="Task">
        <sheet>
          <group>
            <field name="name"/>
            <field name="assigned_to"/>
            <field name="priority"/>
            <field name="due_date"/>
          </group>
          <group>
            <field name="state" widget="statusbar"/>
          </group>
          <group>
            <field name="description"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <!-- SEARCH VIEW -->
  <record id="view_my_model_search" model="ir.ui.view">
    <field name="name">my.module.search</field>
    <field name="model">my.module</field>
    <field name="arch" type="xml">
      <search string="Tasks">
        <field name="name"/>
        <field name="assigned_to"/>

        <filter string="My Tasks"
                name="my_tasks"
                domain="[('assigned_to', '=', uid)]"/>

        <filter string="Overdue"
                name="overdue"
                domain="[('is_overdue', '=', True)]"/>

        <filter string="Done"
                name="done"
                domain="[('state', '=', 'done')]"/>
      </search>
    </field>
  </record>

  <!-- ACTION -->
    <record id="action_my_module" model="ir.actions.act_window">
    <field name="name">Task Tracker</field>
    <field name="res_model">my.module</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_my_model_search"/>
  </record>


    <!-- MENUS -->
  <!-- Root app menu under base.menu_root -->
  <menuitem id="menu_my_module_root"
            name="Task Tracker"
            action="action_my_module"
            sequence="90"/>

  <!-- (Optional) keep a child menu if you want later, but not required now -->
</odoo>
